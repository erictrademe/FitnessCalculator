<resources>

    <style name="FitnessCalculatorTheme.Light" parent="MaterialTheme.Base">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="MaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="DialogTheme" parent="Base.V21.Theme.AppCompat.Dialog">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="DialogAnimationTheme">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="FitnessCalculatorTheme.Button.Borderless" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FitnessCalculatorTheme.Button.Borderless.Small" parent="FitnessCalculatorTheme.Button.Borderless">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="FitnessCalculatorTheme.Button.Borderless.Large" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FitnessCalculatorTheme.EditText.Normal" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
